# Environment
NODE_ENV=development
PORT=3000

# Database (PostgreSQL)
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USER=skuldbot
DATABASE_PASSWORD=skuldbot
DATABASE_NAME=skuldbot_orchestrator

# Redis (BullMQ)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Auth
JWT_SECRET=change-me-in-production
JWT_EXPIRES_IN=1d

# Storage Provider: s3 | azure | gcs | local
STORAGE_PROVIDER=s3

# S3 / MinIO Config
S3_ENDPOINT=http://localhost:9000
S3_REGION=us-east-1
S3_BUCKET=skuldbot-artifacts
S3_ACCESS_KEY_ID=minioadmin
S3_SECRET_ACCESS_KEY=minioadmin

# Azure Blob Storage (if STORAGE_PROVIDER=azure)
# AZURE_STORAGE_CONNECTION_STRING=
# AZURE_STORAGE_CONTAINER=skuldbot-artifacts

# Google Cloud Storage (if STORAGE_PROVIDER=gcs)
# GCS_PROJECT_ID=
# GCS_BUCKET=skuldbot-artifacts
# GCS_KEY_FILENAME=

# Local Storage (if STORAGE_PROVIDER=local)
# LOCAL_STORAGE_PATH=./storage

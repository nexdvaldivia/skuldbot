# SkuldBot Runner Configuration

# Orchestrator connection (required)
SKULDBOT_ORCHESTRATOR_URL=http://localhost:3000
SKULDBOT_API_KEY=skr_your_api_key_here

# Runner identity
SKULDBOT_RUNNER_NAME=my-runner-01
# Labels as JSON: {"os": "windows", "env": "prod", "location": "datacenter-1"}
SKULDBOT_LABELS={}
# Capabilities as JSON array: ["browser", "excel", "email", "sap"]
SKULDBOT_CAPABILITIES=[]

# Polling configuration
SKULDBOT_POLL_INTERVAL_SECONDS=5
SKULDBOT_HEARTBEAT_INTERVAL_SECONDS=30

# Execution configuration
SKULDBOT_WORK_DIR=/tmp/skuldbot-runner
SKULDBOT_MAX_CONCURRENT_JOBS=1
SKULDBOT_JOB_TIMEOUT_SECONDS=3600

# Logging
SKULDBOT_LOG_LEVEL=INFO

# Optional: Don't cleanup runs (for debugging)
# SKULDBOT_CLEANUP_RUNS=false
